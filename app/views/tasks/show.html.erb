<div class="container">
  <h1><%= @task.title %></h1>
  <div class="detail-box">
    <p><%= @task.details %></p>
  </div>
  <% if @task.completed %>
    <p><i class="far fa-check-square"></i> This task is completed</p>
  <% else %>
    <p><i class="far fa-square"></i> This task is not completed</p>
  <% end %>
  <%= link_to "Edit task", edit_path(@task) %>
  <hr>
  <%= link_to "← Back to task list", tasks_path %>
</div>
